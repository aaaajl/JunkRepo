[core]
	repositoryformatversion = 0
	filemode = true
	bare = false
	logallrefupdates = true
	ignorecase = true
	autocrlf = false
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	[color]
    ui = auto
  [color "branch"]
    current = yellow bold
    local = blue bold
    remote = red bold
  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = blue bold
    new = red bold
    whitespace = red reverse
  [color "status"]
    added = green bold
    changed = red bold
    untracked = white
	[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff 
    dfn = diff --name-only
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    wc = whatchanged --pretty=%aN[%ci]%s
